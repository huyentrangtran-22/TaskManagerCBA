@model IEnumerable<TaskManager.Projects.Dtos.ProjectDto>

@{
    ViewData["Title"] = "Projects";
}

<h1>Projects</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Project</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Members</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.Description</td>
                <td>@project.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@(project.EndDate.HasValue? project.EndDate.Value.ToString("yyyy-MM-dd") : "-")</td>
                <td>
                    @if (project.MemberUsernames != null && project.MemberUsernames.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var username in project.MemberUsernames)
                            {
                                <li>@username</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">No members</span>
                    }
                </td>


                <td>
                    <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
