@model IEnumerable<TaskManager.Projects.Dtos.ProjectDto>

@{
    ViewData["Title"] = "Projects";
    var groupedProjects = Model.GroupBy(p => p.Status); // Giả sử có thuộc tính Status
}

<!-- Tiêu đề và nút tạo mới -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title">📁 Projects</h1>
    <a asp-action="Create" class="btn btn-create">
        ➕ Create New Project
    </a>
</div>

<!-- Kanban board -->
<div class="kanban-board d-flex flex-wrap gap-4">
    @foreach (var group in groupedProjects)
    {
        <div class="kanban-column flex-grow-1">
            <h4 class="kanban-title">@group.Key</h4>
            <div class="kanban-cards">
                @foreach (var project in group)
                {
                    <a asp-action="Details" asp-route-id="@project.Id" class="text-decoration-none">
                        <div class="card shadow-sm mb-3 hover-card">
                            <div class="card-body d-flex flex-column">
                                <!-- Tiêu đề -->
                                <h5 class="card-title text-primary">@project.Name</h5>

                                <!-- Ngày bắt đầu / kết thúc -->
                                <div class="d-flex justify-content-between mb-2">
                                    <small><strong>Start:</strong> @project.StartDate.ToString("yyyy-MM-dd")</small>
                                    <small><strong>End:</strong> @(project.EndDate?.ToString("yyyy-MM-dd") ?? "-")</small>
                                </div>

                                <!-- Mô tả -->
                                @if (!string.IsNullOrWhiteSpace(project.Description))
                                {
                                    <p class="card-text text-muted mb-2">@project.Description</p>
                                }

                                <!-- Thành viên -->
                                <div class="mb-2">
                                    <strong>Members:</strong>
                                    @if (project.MemberUsernames?.Any() == true)
                                    {
                                        <ul class="list-inline mb-0">
                                            @foreach (var username in project.MemberUsernames)
                                            {
                                                <li class="list-inline-item badge bg-secondary">@username</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No members</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    }
</div>