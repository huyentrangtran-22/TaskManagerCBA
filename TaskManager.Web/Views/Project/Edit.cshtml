@model TaskManager.Projects.Dtos.ProjectUpdateDto

@{
    ViewData["Title"] = "Edit Project";
}

<h1>Edit Project</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndDate" class="form-label"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Members (Usernames)</label>

        @if (Model.MemberUsernames != null && Model.MemberUsernames.Any())
        {
            for (int i = 0; i < Model.MemberUsernames.Count; i++)
            {
                <input type="text" name="MemberUsernames[@i]" value="@Model.MemberUsernames[i]" class="form-control mb-1" />
            }
        }

        <!-- Ô trống để thêm thành viên mới -->
        <input type="text" name="MemberUsernames[@(Model.MemberUsernames?.Count ?? 0)]" class="form-control mb-1" placeholder="Add new member..." />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}