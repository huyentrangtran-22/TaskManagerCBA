@model IEnumerable<TaskManager.Projects.Dtos.ProjectDto>

@{
    ViewData["Title"] = "Projects";
}

<h1>Projects</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Project</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Id</td>
                <td>@project.Name</td>
                <td>@project.Description</td>
                <td>@project.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@project.EndDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@project.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@project.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
